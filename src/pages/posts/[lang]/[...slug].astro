---
import License from "@components/misc/License.astro";
import Markdown from "@components/misc/Markdown.astro";

import MainGridLayout from "@layouts/MainGridLayout.astro";
import { getSortedPosts } from "@utils/content-utils";
import {
	getPostTranslationKey,
	getPostUrlBySlugAndLang,
	isEnglishPostLanguage,
} from "@utils/url-utils";
import { Icon } from "astro-icon/components";
import { licenseConfig } from "src/config";
import PostMetadata from "../../../components/PostMeta.astro";
import { profileConfig } from "../../../config";
import { t } from "../../../i18n";
import { formatDateToYYYYMMDD } from "../../../utils/date-utils";

const locale = "en";

type StaticPathSeo = {
	translationKey: string;
	canonicalPath: string;
	altPathZh: string;
	altPathEn: string;
};

function toAbsoluteUrl(path: string): string {
	return new URL(path, Astro.site ?? Astro.url).href;
}

export async function getStaticPaths() {
	const allEntries = await getSortedPosts();
	const enEntries = await getSortedPosts("en");
	const isEnglishEntry = (
		entry: Awaited<ReturnType<typeof getSortedPosts>>[number],
	) =>
		isEnglishPostLanguage(entry.data.lang) ||
		entry.slug.toLowerCase().startsWith("en/");
	const getEntryTranslationKey = (
		entry: Awaited<ReturnType<typeof getSortedPosts>>[number],
	) => entry.data.translationKey?.trim() || getPostTranslationKey(entry.slug);
	const getLocaleSlug = (slug: string) => {
		const normalizedSlug = slug.replace(/^\/+|\/+$/g, "");
		return normalizedSlug.replace(/^en\//i, "");
	};
	const translationMap = new Map<
		string,
		{ zhSlug?: string; enSlug?: string }
	>();

	for (const entry of allEntries) {
		const translationKey = getEntryTranslationKey(entry);
		const pair = translationMap.get(translationKey) ?? {};
		if (isEnglishEntry(entry)) {
			pair.enSlug = entry.slug;
		} else {
			pair.zhSlug = entry.slug;
		}
		translationMap.set(translationKey, pair);
	}

	return enEntries
		.filter((entry) => isEnglishEntry(entry))
		.map((entry) => {
			const translationKey = getEntryTranslationKey(entry);
			const pair = translationMap.get(translationKey) ?? {};
			const enSlug = pair.enSlug || entry.slug;
			const zhSlug = pair.zhSlug || "";
			const seo: StaticPathSeo = {
				translationKey,
				canonicalPath: getPostUrlBySlugAndLang(enSlug, "en"),
				altPathZh: zhSlug ? getPostUrlBySlugAndLang(zhSlug, "zh-CN") : "",
				altPathEn: getPostUrlBySlugAndLang(enSlug, "en"),
			};

			return {
				params: {
					lang: "en",
					slug: getLocaleSlug(enSlug),
				},
				props: {
					entry,
					seo,
				},
			};
		});
}

const { entry, seo } = Astro.props as {
	entry: Awaited<ReturnType<typeof getSortedPosts>>[number];
	seo: StaticPathSeo;
};
const { Content, headings } = await entry.render();

const { remarkPluginFrontmatter } = await entry.render();
const canonicalUrl = toAbsoluteUrl(seo.canonicalPath);
const alternateLinks = [
	{
		hrefLang: "zh-CN",
		href: toAbsoluteUrl(seo.altPathZh || seo.canonicalPath),
	},
	{ hrefLang: "en", href: toAbsoluteUrl(seo.altPathEn || seo.canonicalPath) },
	{
		hrefLang: "x-default",
		href: toAbsoluteUrl(seo.altPathZh || seo.canonicalPath),
	},
];

const jsonLd = {
	"@context": "https://schema.org",
	"@type": "BlogPosting",
	headline: entry.data.title,
	description: entry.data.description || entry.data.title,
	keywords: entry.data.tags,
	author: {
		"@type": "Person",
		name: profileConfig.name,
		url: Astro.site,
	},
	datePublished: formatDateToYYYYMMDD(entry.data.published),
	...(entry.data.updated && {
		dateModified: formatDateToYYYYMMDD(entry.data.updated),
	}),
	...(entry.data.image && {
		image: new URL(entry.data.image, Astro.site).href,
	}),
	inLanguage: "en",
};
---
<MainGridLayout title={entry.data.title} description={entry.data.description} image={entry.data.image} lang="en" canonical={canonicalUrl} alternates={alternateLinks} setOGTypeArticle={true} headings={headings} hideSidebar={true}>
    <script is:inline slot="head" type="application/ld+json" set:html={JSON.stringify(jsonLd)}></script>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative mb-4">
        <div
            id="post-container"
            data-translation-key={seo.translationKey}
            data-alt-url-zh={seo.altPathZh}
            data-alt-url-en={seo.altPathEn}
            class:list={["card-base z-10 px-6 md:px-9 pt-6 pb-4 relative w-full ",
            {}
        ]}>
            <!-- word count and reading time -->
            <div class="flex flex-row text-black/30 dark:text-white/30 gap-5 mb-3 transition onload-animation">
                <div class="flex flex-row items-center">
                    <div class="transition h-6 w-6 rounded-md bg-black/5 dark:bg-white/10 text-black/50 dark:text-white/50 flex items-center justify-center mr-2">
                        <Icon name="material-symbols:notes-rounded"></Icon>
                    </div>
                    <div class="text-sm">{remarkPluginFrontmatter.words} {t("post.words", locale)}</div>
                </div>
                <div class="flex flex-row items-center">
                    <div class="transition h-6 w-6 rounded-md bg-black/5 dark:bg-white/10 text-black/50 dark:text-white/50 flex items-center justify-center mr-2">
                        <Icon name="material-symbols:schedule-outline-rounded"></Icon>
                    </div>
                    <div class="text-sm">{remarkPluginFrontmatter.minutes} {t("post.minutes", locale)}</div>
                </div>
            </div>

            <!-- title -->
            <div class="relative onload-animation">
                <div
                    data-pagefind-body data-pagefind-weight="10" data-pagefind-meta="title"
                    class="transition w-full flex items-center font-bold mb-3
                    text-3xl md:text-[2.25rem]/[2.75rem]
                    text-black/90 dark:text-white/90
                    md:before:w-1 before:h-5 before:rounded-md before:bg-[var(--primary)]
                    before:absolute before:top-[0.75rem] before:left-[-1.125rem]
                ">
                    {entry.data.pinned && (
                        <span class="inline-flex items-center mr-3 px-2.5 py-1 text-sm font-medium bg-[oklch(95%_0.2_var(--hue))] dark:bg-[oklch(25%_0.2_var(--hue))] text-[oklch(55%_0.2_var(--hue))] dark:text-[oklch(85%_0.2_var(--hue))] rounded">
                            <Icon name="material-symbols:push-pin" class="mr-1.5 text-base" /> {t("common.pinnedPost", locale)}
                        </span>
                    )}
                    <span>{entry.data.title}</span>
                </div>
            </div>

            <!-- description/excerpt -->
            {(entry.data.description || remarkPluginFrontmatter.excerpt) && (
                <div class="onload-animation mb-4">
                    <div class="text-black/75 dark:text-white/75 text-sm leading-relaxed">
                        {entry.data.description || remarkPluginFrontmatter.excerpt}
                    </div>
                </div>
            )}

            <!-- metadata -->
            <div class="onload-animation">
                <PostMetadata
                        class="mb-5"
                        published={entry.data.published}
                        updated={entry.data.updated}
                        tags={entry.data.tags}
                        slug={entry.slug}
                ></PostMetadata>
                {!entry.data.image && <div class="border-[var(--line-divider)] border-dashed border-b-[1px] mb-5"></div>}
            </div>

            <Markdown class="mb-6 markdown-content onload-animation">
                <Content />
            </Markdown>

            {licenseConfig.enable && <License title={entry.data.title} slug={entry.slug} pubDate={entry.data.published} class="mb-6 rounded-xl onload-animation"></License>}

        </div>
    </div>

    <div class="flex flex-col md:flex-row justify-between mb-4 gap-4 overflow-hidden w-full">
    </div>

</MainGridLayout>
